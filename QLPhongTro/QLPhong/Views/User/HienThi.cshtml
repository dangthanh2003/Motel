@using QLPhong.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    
   
</head>
<body>

    <div class="container">
        <h2 class="text-center">Chi tiết phòng</h2>

        <div class="card">
            <div class="card-body">
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">Mã phòng</dt>
                    <dd class="col-sm-9">@Model.MaPhong</dd>

                    <dt class="col-sm-3">Số phòng</dt>
                    <dd class="col-sm-9">@Model.SoPhong</dd>

                    <dt class="col-sm-3">Loại phòng</dt>
                    <dd class="col-sm-9">@Model.LoaiPhong</dd>

                    <dt class="col-sm-3">Giá thuê tháng</dt>
                    <dd class="col-sm-9">@string.Format("{0:C0}", Model.GiaThueThang)</dd>

                    <dt class="col-sm-3">Trạng thái thuê</dt>
                    <dd class="col-sm-9"><span class="badge badge-@(Model.DaThue ? "success" : "danger")">@(Model.DaThue ? "Đã thuê" : "Chưa thuê")</span></dd>
                </dl>
            </div>
        </div>

        @if (ViewBag.Nuoc != null)
        {
            <div class="card">
                <div class="card-body">
                    <h4>Thông tin tiền nước</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Ngày đọc số nước</dt>
                        <dd class="col-sm-9">@ViewBag.Nuoc.NgayDocSo</dd>

                        <dt class="col-sm-3">Chỉ số cũ nước</dt>
                        <dd class="col-sm-9">@ViewBag.Nuoc.ChiSoCu</dd>

                        <dt class="col-sm-3">Chỉ số mới nước</dt>
                        <dd class="col-sm-9">@ViewBag.Nuoc.ChiSoMoi</dd>

                        <dt class="col-sm-3">Giá tiền nước</dt>
                        <dd class="col-sm-9">@string.Format("{0:C0}", ViewBag.Nuoc.GiaTien)</dd>
                    </dl>
                </div>
            </div>
        }

        @if (ViewBag.Dien != null)
        {
            <div class="card">
                <div class="card-body">
                    <h4>Thông tin tiền điện</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Ngày đọc số điện</dt>
                        <dd class="col-sm-9">@ViewBag.Dien.NgayDocSo</dd>

                        <dt class="col-sm-3">Chỉ số cũ điện</dt>
                        <dd class="col-sm-9">@ViewBag.Dien.ChiSoCu</dd>

                        <dt class="col-sm-3">Chỉ số mới điện</dt>
                        <dd class="col-sm-9">@ViewBag.Dien.ChiSoMoi</dd>

                        <dt class="col-sm-3">Giá tiền điện</dt>
                        <dd class="col-sm-9">@string.Format("{0:C0}", ViewBag.Dien.GiaTien)</dd>
                    </dl>
                </div>
            </div>
        }
        <div class="card">
            <div class="card-body">
                <h4>Danh sách khách đang thuê phòng</h4>
                <hr />
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Họ và tên đệm</th>
                            <th>Tên</th>
                            <th>CMND</th>
                            <th>Điện thoại</th>
                            <th>Ngày vào ở</th>
                            <th>Ngày trả phòng</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (ViewBag.KhachThue != null)
                        {
                            <tr>
                                <td>@ViewBag.KhachThue.HoTenDem</td>
                                <td>@ViewBag.KhachThue.Ten</td>
                                <td>@ViewBag.KhachThue.Cmnd</td>
                                <td>@ViewBag.KhachThue.DienThoai</td>
                                <td>@ViewBag.KhachThue.NgayVaoO</td>
                                <td>@ViewBag.KhachThue.NgayTraPhong</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


</body>
</html>